{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "isolatedModules": true,
        "moduleResolution": "Node",
        "module": "ES2020",
        "target": "ES2020",
        "lib": [
            "dom",
            "es2020"
        ],
        "jsx": "react-jsx"
    }
}